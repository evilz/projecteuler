<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <RootNamespace>Projecteuler</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>14.0</LangVersion>
    <RazorLangVersion>latest</RazorLangVersion>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="RazorConsole.Core" Version="0.3.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude DownloadProblems directory from compilation -->
    <Compile Remove="DownloadProblems/**/*.cs" />
    <None Include="DownloadProblems/**/*.cs" />
  </ItemGroup>

</Project>
